extends base.pug

block contents 
    if(errorMessage)
        span=errorMessage

    form(method="post") 
        input(type="text" name="name" placeholder="이름" value=loggedUser.name required)
        input(type="email" name="email" placeholder="이메일" value=loggedUser.email required)
        input(type="text" name="userName" placeholder="유저명" value=loggedUser.userName required)
        input(type="text" name="location" placeholder="위치" value=loggedUser.location required)

        input(type="submit" value="Update")

    hr

    if !loggedUser.snsOnly
        a(href="/users/changepw") Change password &rarr; 
