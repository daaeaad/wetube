
extends base.pug

block contents 
    h4 Change Title of video

    form(method="post")
        input(type="text" name="title" placeholder="제목" value=video.title minlength="5" maxlength="50")
        input(type="text" name="description" placeholder="설명" value=video.description minlength="5" maxlength="100")
        input(type="text" name="hashtags" placeholder="쉼표(,)로 구분하여 해시태그를 입력" value=video.hashtags.map((item)=>item.replace('#', '')).join())

        input(type="submit" value="Save")

